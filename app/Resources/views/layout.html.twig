<html>
    <head>
        <title>{% block title %} Burger {% endblock %}</title>
        {% block stylesheet %}
            <link rel="stylesheet" type="text/css" href="{{ asset('css/bootstrap.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/font-awesome.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/sweetalert.min.css') }}">
            <link rel="stylesheet" type="text/css" href="{{ asset('css/essai.css') }}">
        {% endblock %}
    </head>
    <body>
        <div class="container">
            <div id="header" class="row">
                <div id="carous">
                    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                        <ol class="carousel-indicators">
                            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                        </ol>
                        <div class="carousel-inner">
                            <div class="carousel-item active">
                                <img class="d-block w-60" src="{{ asset('img/b1.JPG') }}" alt="First slide" height="230px" width="75%">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-60" src="{{ asset('img/b2.jpg') }}" alt="Second slide" height="230px" width="75%">
                            </div>
                            <div class="carousel-item">
                                <img class="d-block w-60" src="{{ asset('img/b3.jpg') }}" alt="Third slide" height="230px" width="75%">
                            </div>
                        </div>
                        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                            <span class="sr-only">Previous</span>
                        </a>
                        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                            <span class="carousel-control-next-icon" aria-hidden="true"></span>
                            <span class="sr-only">Next</span>
                        </a>
                    </div>
                </div>
            </div>
            <div class="row col-md-12" id="menu">
                    <nav class="collapse navbar navbar-collapse navbar-expand-lg navbar-dark bg-dark">
                        <a class="navbar-brand" href="{{ path('projet_burger_homepage') }}"><span class="glyphicon glyphicon-home"></span>GoodBurger</a>
                        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>
                        <div class="collapse navbar-collapse" id="navbarNav">
                            <ul class="navbar-nav mr-auto">
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('projet_burger_catalog') }}">Handburger Catalog</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Your Cart</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">Change quantity</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link disabled" href="#">Checkout</a>
                                </li>
                            </ul>
                            <form class="form-inline my-2 my-lg-0">
                                <input class="form-control mr-sm-2" type="search" placeholder="Search" aria-label="Search">
                                <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
                            </form>
                            <ul class="navbar-nav">
                                <li class="nav-item">
                                    <a class="nav-link"><button  type="button" data-toggle="modal" data-target="#loginmodal" class="btn btn-outline-primary" id="buttonLogin"> Log In</button> </a>
                                    {% include "loginmodal.html.twig" %}
                                </li>
                            </ul>
                        </div>
                    </nav>
            </div>
            <div id="content">
                {% block body %}
                {% endblock %}
            </div>
            <hr>
            <footer>
                <p>Supinfo 2018</p>
            </footer>
        </div>
        {% block javascripts %}
            <script type="text/javascript" src="{{ asset('js/jquery-3.1.1.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/bootstrap.min.js') }}"></script>
            <script type="text/javascript" src="{{ asset('js/popper.min.js') }}"></script>
        {% endblock %}

    </body>

</html>